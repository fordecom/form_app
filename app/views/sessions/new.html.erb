<% provide(:title, "Sign in") %>
<h1>
<%=image_tag("bcclogo.png", class: "bcc_logo") %>
</h1>
<div class="row">
  <div class="login_box">
    <div class="well span6 offset3">
      <div class="login_left span3">
      <%= form_for(:session, url: sessions_path) do |f| %>
        
        <%= f.label :email %>
        <%= f.text_field :email, class: "field_outline" %>

        <%= f.label :password %>
        <%= f.password_field :password , class: "field outline"%>
        <br></br>
        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
        <%= link_to "New User?",  signup_path, class: "btn btn-large btn-primary", style: "font-weight:bold;"  %>
      <% end %>
      
      </div>
      <div class="login_right span3">
        <h2 class="p_by">Welcome</br> to your </br>personal </br>tax manager</h2>
      </div>
    </div>
  </div>
</div>
